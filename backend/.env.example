# ──────────────────────────────────────────────
# App
# ──────────────────────────────────────────────
NODE_ENV=development
PORT=3000

# ──────────────────────────────────────────────
# JWT
# ──────────────────────────────────────────────
JWT_SECRET=change-me-in-production-use-256-bit-key
JWT_EXPIRATION=3600

# ──────────────────────────────────────────────
# PostgreSQL (TypeORM - Legacy)
# ──────────────────────────────────────────────
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=pass
POSTGRES_DB=videoconf

# ──────────────────────────────────────────────
# Prisma (Recommended)
# ──────────────────────────────────────────────
# Full connection string for Prisma ORM
DATABASE_URL="postgresql://postgres:pass@localhost:5432/videoconf?schema=public"

# Optional: Connection pooling via PgBouncer (production)
# DATABASE_URL_POOLED="postgresql://postgres:pass@pgbouncer:6432/videoconf?pgbouncer=true"

# ──────────────────────────────────────────────
# Redis
# ──────────────────────────────────────────────
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ──────────────────────────────────────────────
# mediasoup
# ──────────────────────────────────────────────
MEDIASOUP_LISTEN_IP=0.0.0.0
MEDIASOUP_ANNOUNCED_IP=127.0.0.1
MEDIASOUP_MIN_PORT=40000
MEDIASOUP_MAX_PORT=49999
MEDIASOUP_NUM_WORKERS=2
MEDIASOUP_LOG_LEVEL=warn

# ──────────────────────────────────────────────
# Room constraints
# ──────────────────────────────────────────────
MAX_PARTICIPANTS_PER_ROOM=100

# ──────────────────────────────────────────────
# Rate limiting
# ──────────────────────────────────────────────
THROTTLE_TTL=60
THROTTLE_LIMIT=60
